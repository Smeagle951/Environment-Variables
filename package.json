{
  "name": "fortsmart-agro-admin",
  "version": "1.0.0",
  "description": "Admin Dashboard para FortSmart Agro - Gerenciamento de Usuários, Grupos e Códigos",
  "author": "FortSmart Agro",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:standalone": "next build && node scripts/copy-static-to-standalone.js",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:standalone && electron-builder",
    "electron:build:win": "npm run build:standalone && electron-builder --win",
    "electron:build:mac": "npm run build:standalone && electron-builder --mac",
    "electron:build:linux": "npm run build:standalone && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@supabase/ssr": "^0.2.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^5.8.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.fortsmart.agro.admin",
    "productName": "FortSmart Agro Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      ".env.local",
      "!node_modules/**/*"
    ],
    "asarUnpack": [
      "electron/**/*",
      ".next/standalone/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
